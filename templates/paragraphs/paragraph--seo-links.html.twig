{% set classes = [
'item-paragraph',
'item-paragraph--' ~ view_mode|clean_class,
'item-paragraph--' ~ paragraph.bundle|clean_class,
'swipeable--horizontal',
] %}

<div{{ attributes.addClass(classes) }} data-view-type="listSwipeableView">
    <div class="container-content seo-linker--image">
        {% if content.field_title|render %}
            <h3 class="seo-linker__title">{{ content.field_title  | plain_text }}</h3>
        {% endif %}
        <div class="swipeable__wrapper">
            {{ content|without('field_title', 'field_p_view_mode') }}
        </div>
    </div>
</div>
