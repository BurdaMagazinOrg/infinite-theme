  {% endif %}

  {% block content %}

      <div class="region-full-content region-marketing ad-inactive marketing-view" data-view-type="marketingView">
          <div class="container-content container-fixed-content container-marketing">
              {#<span class="item-label">Anzeige</span>#}
              <div class="item-marketing">
                <a class="item-marketing__fallback" href="/newsletter" target="_self"></a>
                {{ content }}
              </div>
          </div>
      </div>
  {% endblock %}

{% if use_container %}
</{{ block_tag|raw }}>
{% endif %}
