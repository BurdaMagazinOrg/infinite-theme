{{ attach_library('infinite/sidebar-navigation') }}

<div class="item-content__block item-group--outer-wrapper">
    <div class="item-group--outer">
        {# item-group__row #}
        {# <div class="item-group__col item-group__col--left"> #}

            <div class="sidebar-navigation">
                <div data-btn-action="class-extend" data-btn-action-value="btn__open-tree--is-open" class="btn__open-tree">
                    <span>Alle</span>
                </div>
                <ul class="links">
                  {% for navigation in progress_navigation %}
                    <li>
                        <span class="progress"></span>
                        <a href="#{{ navigation }}">{{ navigation }}</a>
                        <span class="mobile-hidden-label">{{ navigation }}/span>
                    </li>
                  {% endfor %}
                </ul>
            </div>
        {# </div>
        <div class="item-group__col item-group__col--right"> #}
            {{ children }}

            {% block content_tags %}
                {{ parent.field_tags }}
            {% endblock %}

            <div class="region-fixed-content socials socials-bar socials-horizontal-bar item-content__block">
                {% block socials_horizontal_bar %}
                    {% embed '@infinite/embeds/social_icons.html.twig' with parent %}
                    {% endembed %}
                {% endblock %}
            </div>
        {# </div> #}
    </div>
</div>
