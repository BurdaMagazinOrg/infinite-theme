{% set url = url('<current>') %}

{% if 'fia/nodes.xml' in url|render|render %}
    {% if content %}
        <figure data-feedback="fb:likes,fb:comments">
            {{ content }}
            <figcaption>
                {% if content.field_description | render %}
                    <h1>{{ content.field_description | basic_format }}</h1>
                {% endif %}
                {% if content.field_copyright | plain_text or content.field_source | plain_text %}
                    <cite>
                    <span class="text-copyright">
                        &copy;
                        {% if content.field_copyright  %}
                            {{ content.field_copyright | plain_text}}
                        {% endif %}
                        {% if content.field_source  %}
                            <span class="text-source">{{ content.field_source | plain_text }}</span>
                        {% endif %}
                    </span>
                    </cite>
                {% endif %}
            </figcaption>
        </figure>
    {% endif %}
{% else %}
    {{ content }}
{% endif %}
{{ pins }}