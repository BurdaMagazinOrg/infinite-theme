{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% if content %}
    <div class="img-container" itemscope="" itemtype="http://schema.org/imageObject">
        {{ content.field_image }}
    </div>
    <div class="caption">
        {% if content.field_copyright | plain_text or content.field_source | plain_text %}
            <div class="text-copyright">
                {% if content.field_copyright | plain_text %}
                    <span>{{ content.field_copyright }}</span>
                {% endif %}
                {% if content.field_source | plain_text %}
                    <span>{{ content.field_source }}</span>
                {% endif %}
            </div>
        {% endif %}
        {% if content.field_description %}
            <div class="text-description">{{ content.field_description }}</div>
        {% endif %}

        <div class="socials socials-bar">
            <a class="item-social icon-facebook"
               href="https://www.facebook.com/sharer/sharer.php?m2w&u={{ share_img_url }}" target="_blank"
               data-social-type="facebook"></a>

            <div class="item-social icon-pinterest"
                 data-href="https://pinterest.com/pin/create/button/?url={{ absolute_node_url }}&media={{ share_img_url }}&description={{ content.field_description | plain_text | url_encode }}"
                 data-social-type="pinterest"></div>
        </div>
    </div>
{% endif %}
