{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% set classes = [
    'region-full-content',
    'item-content',
    'item-content--media',
] %}

{% set attributes = attributes.setAttribute('data-view-type', 'mediaView') %}
{#{% set attributes = attributes.setAttribute('data-mid', mid) %}#}
{#{% set attributes = attributes.setAttribute('data-uuid', uuid) %}#}

<article {{ attributes.addClass(classes) }}>
    <div class="item-content__header">
        <h1 class="title--article">{{ name }}</h1>
    </div>
    <div class="embed-responsive embed-responsive-16by9 video-container">
        {{ content.field_video }}
    </div>
    <div class="caption">
        <div class="text-copyright">
            <span class="copyright">{{ content.field_copyright }}</span>
            <span class="source">{{ content.field_source }}</span>
        </div>
        <div class="text-description">{{ content.field_description }}</div>
    </div>
    {{ content.field_tags }}
</article>
