{#
/**
 * @file
 * Default theme implementation to present a media entity.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}


{% if content %}
    <div class="img-container profile__img-container" itemscope="" itemtype="http://schema.org/imageObject">
        {{ content.field_image }}
    </div>
    <div class="caption profile__caption">
        {% if content.field_copyright | plain_text or content.field_source | plain_text %}
            <div class="text-copyright">
                {% if content.field_copyright | plain_text %}
                    <span>{{ content.field_copyright }}</span>
                {% endif %}
                {% if content.field_source | plain_text %}
                    <span>{{ content.field_source }}</span>
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endif %}
