{#
/**
 * @file advertising_product.html.twig
 * Default theme implementation to present Advertising Product data.
 *
 * This template is used when viewing Advertising Product pages.
 *
 *
 * Available variables:
 * - content: A list of content items. Use 'content' to print all content, or
 * - attributes: HTML attributes for the container element.
 * - data_attributes: HTML data-* attributes for tracking properties.
 *
 * @see template_preprocess_advertising_product()
 *
 * @ingroup themeable
 */
#}
{% if content.status %}
    {% set label = content.product_brand|render ~" - " ~content.product_name|render ~" f√ºr " ~content.product_price|render ~" " ~formatted_currency~ " bei " ~content.product_shop|render %}
    <figure data-feedback="fb:likes, fb:comments">
        {{ content.product_image }}
        <figcaption class="op-vertical-below op-extra-large">
            <h1><a href="{{ tracking_url }}" title="{{ label }}" target="_blank">{{ label }}</a></h1>
        </figcaption>
    </figure>
{% endif %}
