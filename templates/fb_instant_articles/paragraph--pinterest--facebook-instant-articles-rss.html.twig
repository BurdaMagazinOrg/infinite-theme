{% if content.field_title|plain_text %}
    <h2>{{ content.field_title|plain_text }}</h2>
{% endif %}
<figure class="op-interactive">
    <iframe width="345">
        {% if content.field_media %}
            {{ content.field_media }}
        {% else %}
            <a data-pin-do="embedPin" data-pin-width="medium" href="{{ pinit_url }}"></a>
        {% endif %}
        <script async defer src="//assets.pinterest.com/js/pinit.js"></script>
    </iframe>
</figure>
