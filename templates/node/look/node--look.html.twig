{% set classes = [
'look',
] %}


{% set attributes = attributes.setAttribute('data-nid', nid) %}
{% set attributes = attributes.setAttribute('data-uuid', uuid) %}
{% set attributes = attributes.setAttribute('data-tr-container-type', 'look') %}
{% set attributes = attributes.setAttribute('data-view-type', 'lookView') %}

{% set attributes = attributes.removeAttribute('role') %}

<div {{ attributes.addClass(classes) }}>
    {% block content_body %}

        {{ attach_library('infinite/infinite.views.look-view') }}

        {{ content }}
    {% endblock %}
</div>
